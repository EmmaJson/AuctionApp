@model IEnumerable<AuctionApp.Models.Auctions.AuctionVm>

@{
ViewData["Title"] = "Auction";
}

<h1>Auction</h1>

@if (TempData["SuccessMessage"] != null)
{
<div class="alert alert-success">
    @TempData["SuccessMessage"]
</div>
}

@if (TempData["ErrorMessage"] != null)
{
<div class="alert alert-danger">
    @TempData["ErrorMessage"]
</div>
}

<a href="@Url.Action("Create", "Auctions")" class="btn btn-success">Create New</a>

<div class="table-responsive">
    <table class="table">
        <thead>
        <tr>
            <th>Auction Item</th>
            <th>Item Description</th>
            <th>Starting Price</th>
            <th>Auction Owner</th>
            <th>Active Auction</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) // Replace with your actual model
        {
        <tr>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.StartingPrice.ToString("C")</td> <!-- Format as currency -->
            <td>@item.UserName</td>
            <td>@item.EndDate.ToString("g")</td> <!-- General date format -->
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn custom-button" })
            </td>
        </tr>
        }
        </tbody>
    </table>
</div>

